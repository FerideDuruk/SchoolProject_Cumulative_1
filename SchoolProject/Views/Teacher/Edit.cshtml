<link href="~/Content/Site.css" rel="stylesheet" />
@model SchoolProject.Models.Teacher
@{
    ViewBag.Title = "Edit";
}

<h2>Edit Teacher</h2>
<a href="/Teacher/Show/@Model.Id">Go Back</a>

<!--POST request to /Teacher/UpdateTeacher{id}-->
<form method="POST" action="/Teacher/UpdateTeacher/@Model.Id">

    <div>
        <label for="fname">First Name:</label>
    </div>

    <div>
        <input type="text" name="fname" value="@Model.FirstName" />
    </div>

    <div>
        <label for="lname">Last Name:</label>
    </div>

    <div>
        <input type="text" name="lname" value="@Model.LastName" />
    </div>

    <div>
        <label for="emplnum">Employee Number:</label>
    </div>

    <div>
        <input type="text" name="emplnum" value="@Model.EmployeeNum" />
    </div>

    <div>
        <label for="sal">Salary:</label>
    </div>

    <div>
        <input type="text" name="salary" value="@Model.Salary" />
    </div>

    <div>
        <input id="editAddBtn" type="submit" value="Update This Teacher" />
    </div>

</form>