<link href="~/Content/Site.css" rel="stylesheet" />
@{
    ViewBag.Title = "List";
}

<a class="navButton" href="/Teacher/New">Add a New Teacher</a>

<h2 >List of Teachers</h2>

<!--List of all teachers with links to their full information-->
@foreach (var teacher in Model)
{
    <div class="listview">
    <a href="/Teacher/Show/@teacher.Id">@teacher.FirstName @teacher.LastName</a>
    </div>
}

